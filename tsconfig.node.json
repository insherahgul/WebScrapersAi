{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler / Node mode */
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "isolatedModules": false, 
    "moduleDetection": "force",

    /* Linting / strictness */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Project references require emit */
    "composite": true,
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false
  },
  "include": ["src"]
}
